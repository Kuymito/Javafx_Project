<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scheduler.controllers.LoginController">
    <children>
        <Label text="Login"><font><Font name="Arial Bold" size="28.0" /></font></Label>
        <TextField fx:id="usernameField" maxWidth="250.0" promptText="Username" />
        <PasswordField fx:id="passwordField" maxWidth="250.0" promptText="Password" />
        <Button fx:id="loginButton" onAction="#handleLoginButtonAction" style="-fx-background-color: #007BFF; -fx-text-fill: white;" text="Log In" />
        <Label fx:id="statusLabel" textFill="RED" />
    </children>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scheduler.controllers.StudentsController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <Label text="Manage Students" BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial Bold" size="20.0" />
            </font>
        </Label>
    </top>
    <center>
        <TableView fx:id="studentsTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Student Name" />
                <TableColumn fx:id="majorColumn" prefWidth="300.0" text="Major" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets top="20.0" />
            </padding>
            <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
                <TextField fx:id="nameField" promptText="Name" prefWidth="200.0" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="majorField" promptText="Major" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            </GridPane>
            <HBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets top="10.0" />
                </padding>
                <Button onAction="#handleAddButton" text="Add" />
                <Button onAction="#handleUpdateButton" text="Update Selected" />
                <Button onAction="#handleDeleteButton" text="Delete Selected" />
                <Button onAction="#handleClearButton" text="Clear Form" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
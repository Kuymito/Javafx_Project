<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scheduler.controllers.ClassesController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <Label text="Manage Classes" BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial Bold" size="20.0" />
            </font>
        </Label>
    </top>
    <center>
        <TableView fx:id="scheduleTable" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets top="20.0" />
            </padding>
            <GridPane hgap="10.0" vgap="10.0">
                <TextField fx:id="courseNameField" promptText="Course Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="roomNumberField" promptText="Room Number" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <ComboBox fx:id="teacherComboBox" promptText="Select Teacher" prefWidth="150.0" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <TextField fx:id="dayOfWeekField" promptText="Day of Week" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="startTimeField" promptText="Start Time (HH:MM)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="endTimeField" promptText="End Time (HH:MM)" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            </GridPane>
            <HBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets top="10.0" />
                </padding>
                <Button onAction="#handleAddButton" text="Add" />
                <Button onAction="#handleUpdateButton" text="Update Selected" />
                <Button onAction="#handleDeleteButton" text="Delete Selected" />
                <Button onAction="#clearForm" text="Clear Form" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
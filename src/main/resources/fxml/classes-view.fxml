<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scheduler.controllers.ClassesController">
    <children>
        <Label text="Class and Enrollment Management">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" top="10.0" />
            </padding>
        </Label>
        <SplitPane dividerPositions="0.65" VBox.vgrow="ALWAYS">
            <items>
                <TableView fx:id="scheduleTable" />
                <AnchorPane>
                    <children>
                        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                            <children>
                                <Label fx:id="enrollmentLabel" text="Select a Class to See Enrollments">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="enrolledStudentsTable" prefHeight="200.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="studentNameColumn" prefWidth="150.0" text="Student Name" />
                                    </columns>
                                </TableView>
                                <Label text="Enroll New Student">
                                    <font>
                                        <Font name="System Italic" size="14.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <JFXComboBox fx:id="allStudentsComboBox" promptText="Select a Student" HBox.hgrow="ALWAYS" />
                                        <JFXButton fx:id="enrollButton" onAction="#handleEnrollButton" text="Enroll" />
                                    </children>
                                </HBox>
                                <JFXButton fx:id="unenrollButton" onAction="#handleUnenrollButton" prefWidth="200.0" style="-fx-background-color: #F44336;" text="Unenroll Selected Student" />
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</VBox>
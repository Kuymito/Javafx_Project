<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scheduler.controllers.TeachersController">
    <padding><Insets topRightBottomLeft="10" /></padding>
    <top>
        <Label text="Manage Teachers" BorderPane.alignment="CENTER">
            <font><Font name="Arial Bold" size="20.0" /></font>
        </Label>
    </top>
    <center>
        <TableView fx:id="teachersTable" BorderPane.margin="$x1">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Teacher Name" />
                <TableColumn fx:id="subjectColumn" prefWidth="300.0" text="Subject" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <TextField fx:id="nameField" promptText="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="200"/>
                <TextField fx:id="subjectField" promptText="Subject" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200"/>
            </GridPane>
            <!-- NEW AND CORRECT CODE -->
            <HBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets top="10.0" />
                </padding>
                <children>
                    <Button onAction="#handleAddButton" text="Add" />
                    <Button onAction="#handleUpdateButton" text="Update Selected" />
                    <Button onAction="#handleDeleteButton" text="Delete Selected" />
                    <Button onAction="#handleClearButton" text="Clear Form" />
                </children>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>